<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:id="@+id/sample22"
            android:textColor="@color/White"
            android:textSize="15sp"
            />
        <TextView
            android:layout_toRightOf="@+id/sample22"
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_below="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: "
            android:id="@+id/sample222"
            android:textColor="@color/White"
            android:textSize="15sp"
            />
        <TextView
            android:layout_below="@+id/order_user_name"
            android:layout_toRightOf="@+id/sample222"
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Phone Number"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price: "
            android:id="@+id/sample2222"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:layout_below="@+id/order_phone_number"
            />
        <TextView
            android:layout_toRightOf="@+id/sample2222"
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_below="@+id/order_phone_number"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address City: "
            android:id="@+id/sample22222"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:layout_below="@+id/order_total_price"
            />

        <TextView
            android:layout_toRightOf="@+id/sample22222"
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_below="@+id/order_total_price"
            android:layout_height="wrap_content"
            android:text="Adress City"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time: "
            android:id="@+id/sample222222"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:layout_below="@+id/order_address_city"
            />
        <TextView
            android:layout_toRightOf="@+id/sample222222"
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_below="@+id/order_address_city"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Show This Order Products."
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:background="@color/White"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>